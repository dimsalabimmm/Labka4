<Window x:Class="Labka4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Labka4.Controls"
        mc:Ignorable="d"
        Title="Графики"
        Height="650"
        Width="1000"
        Background="{StaticResource Brush.WindowBackground}">
    <Grid Background="{StaticResource Brush.WindowBackground}">
        <Border Margin="16"
                Padding="28"
                CornerRadius="28"
                Background="{StaticResource Brush.CardBackground}"
                BorderBrush="{StaticResource Brush.PanelBorder}"
                BorderThickness="1"
                Effect="{StaticResource DropShadowEffect}">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Top"
                            Margin="0,0,0,20">
                    <TextBlock Text="Графики"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="{StaticResource Brush.TextPrimary}" />
                    <TextBlock Margin="0,10,0,0"
                               Text="Удерживайте правую кнопку мыши, чтобы вращать поверхность. Колесо мыши регулирует масштаб. На каждой вкладке отображается своя функция."
                               Foreground="{StaticResource Brush.TextSecondary}"
                               TextWrapping="Wrap" />
                </StackPanel>

                <Border Padding="20"
                        CornerRadius="22"
                        Background="{StaticResource Brush.PanelBackground}"
                        BorderBrush="{StaticResource Brush.PanelBorder}"
                        BorderThickness="1">
                    <TabControl ItemsSource="{Binding FunctionTabs}"
                                DisplayMemberPath="Title">
                        <TabControl.ContentTemplate>
                            <DataTemplate>
                                <controls:Surface3DControl SurfaceData="{Binding SurfaceData}" />
                            </DataTemplate>
                        </TabControl.ContentTemplate>
                    </TabControl>
                </Border>
            </DockPanel>
        </Border>
    </Grid>
</Window>
